<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="grofinItem"
            type="com.grofin.feature.dashboard.service.model.ServiceModel" />
    </data>

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:imageResource="@{grofinItem.imageResourceId}"
            tools:ignore="ContentDescription"
            tools:src="@drawable/insurance" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_service"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:fontFamily="@font/montserrat_regular"
            android:text="@{grofinItem.serviceName}"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="Insurance Insurance" />

    </RelativeLayout>
</layout>